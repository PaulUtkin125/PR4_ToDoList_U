<Window x:Class="PR4_ToDoList_U.Windows.Redaktirovanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR4_ToDoList_U.Windows"
        mc:Ignorable="d"
        Title="Редактирование" Height="250" Width="500" Background="LightBlue">
    <Grid>
        <StackPanel>
            <TextBox x:Name="TaskBox" FontSize="18" Height="100" TextWrapping="Wrap" Background="LightGray" Margin="10"/>
            <Button Content="Сохранить" FontSize="18" Width="150" Click="save_Click"/>
        </StackPanel>
    </Grid>
</Window>
